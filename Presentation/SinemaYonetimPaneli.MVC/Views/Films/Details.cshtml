@using SinemaYonetimPaneli.Domain.Entities;

@model Film

@{
    ViewData["Title"] = "Details";
}

<h1>Detaylar</h1>

<div>
    <h4>Kisiler</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Film Adı
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.filmAd)
        </dd>
        <dt class = "col-sm-2">
            Yapım Yılı
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.filmYapimYil)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.filmID">Düzenle</a> |
    <a asp-action="All">Listeye Dön</a>
</div>
