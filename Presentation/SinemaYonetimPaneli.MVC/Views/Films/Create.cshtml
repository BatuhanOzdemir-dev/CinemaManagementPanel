@using SinemaYonetimPaneli.Domain.Entities;

@model Film

@{
    ViewData["Title"] = "Create";
}


<div class="container-fluid px-4 mt-3">

    <h1>Film Oluştur</h1>

    <h4>Film</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="filmAd" class="control-label"></label>
                    <input asp-for="filmAd" class="form-control" />
                    <span asp-validation-for="filmAd" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="filmYapimYil" class="control-label"></label>
                    <input asp-for="filmYapimYil" class="form-control" />
                    <span asp-validation-for="filmYapimYil" class="text-danger"></span>
                </div>
                <div class="form-group mt-3 mb-3">
                    <input type="submit" value="Oluştur" formmethod="post" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="mt-3 mb-3" asp-action="All">Listeye Dön</a>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
