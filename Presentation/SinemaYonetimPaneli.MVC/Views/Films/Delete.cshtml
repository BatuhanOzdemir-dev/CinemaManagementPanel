@using SinemaYonetimPaneli.Domain.Entities;

@model Film

@{
    ViewData["Title"] = "Delete";
}

<h1>Sil</h1>

<h3>Aşağıdaki filmi silmek istediğinizden emin misiniz?</h3>
<div>
    <h4>Kisiler</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Film Adı
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.filmAd)
        </dd>
    </dl>
    
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="filmID" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="All">Listeye Dön</a>
    </form>
</div>
